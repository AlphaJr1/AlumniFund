{
    "name": "dompet-alumni-functions",
    "version": "1.0.0",
    "description": "Cloud Functions for Dompet Alumni - Automated deadline management and system intelligence",
    "scripts": {
        "serve": "firebase emulators:start --only functions,firestore",
        "shell": "firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log",
        "test": "mocha test/**/*.test.js --timeout 10000",
        "test:watch": "mocha test/**/*.test.js --watch --timeout 10000"
    },
    "engines": {
        "node": "18"
    },
    "main": "index.js",
    "dependencies": {
        "firebase-admin": "^12.0.0",
        "firebase-functions": "^5.0.0"
    },
    "devDependencies": {
        "chai": "^4.5.0",
        "firebase-functions-test": "^3.1.0",
        "mocha": "^10.8.2",
        "sinon": "^17.0.1"
    },
    "private": true
}
